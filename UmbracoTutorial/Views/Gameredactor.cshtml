@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "PageBase.cshtml";
}


        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                     @Umbraco.Field("gameRedactorTile")
                    </h2>
                    <hr>
                </div>
                <div class="col-lg-12 text-center">
                    @{
						
                                    if (Model.Content.HasValue("gameRedactorHeaderImage"))
                                    {
                                        var mediaItem = Umbraco.TypedMedia(Model.Content.GetPropertyValue("gameRedactorHeaderImage"));
                                        <img class="img-responsive img-border img-full" src="@mediaItem.GetPropertyValue("umbracoFile")" alt="@mediaItem.GetPropertyValue("Name")" />
                                    }
                                }
                </div>
                <div class="col-xs-12 text-center">
                    <p>@Umbraco.Field("gameRedactorContent")</p> 
						</div>
			
                <a href="/otherprojects" class="btn btn-default btn-lg" ><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>   Cofnij  </a>
            </div>
					</div>
					</div>
					