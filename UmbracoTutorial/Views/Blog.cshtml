@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "PageBase.cshtml";
}

<div class="row">
            <div class="box">
                <div class="col-lg-12">
				<hr>
                    <h2 class="intro-text"><strong>@Umbraco.Field("blogHeaderBoxTitle")</strong>
				<hr>
				 @{
						
                                    if (Model.Content.HasValue("blogHeaderBoxImage"))
                                    {
                                        var mediaItem = Umbraco.TypedMedia(Model.Content.GetPropertyValue("blogHeaderBoxImage"));
                                        <img class="img-responsive img-border img-full" src="@mediaItem.GetPropertyValue("umbracoFile")" alt="@mediaItem.GetPropertyValue("Name")" />
                                    }
                  }

			@Umbraco.Field("blogHeaderBoxContent")
						
   		  </div>
      </div>
</div>					
<div class="row">
            <div class="box">
                <div class="col-lg-12">
  		 
					
					<hr>
                    <h2 class="intro-text"><strong>@Umbraco.Field("articleTitle")</strong>
                        @Umbraco.Field("articleHead")
                    </h2>
                    <hr>
						
				
					@Umbraco.RenderMacro("listArticle")
						
						
                </div>
            </div>
        </div>