                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                      @Umbraco.Field("articleTitle")
                    </h2>
                    <hr>
                </div>
                <div class="col-lg-12 text-center">
                    @{
                                    if (Model.Content.HasValue("articleimage"))
                                    {
                                        var mediaItem = Umbraco.TypedMedia(Model.Content.GetPropertyValue("articleimage"));
                                        <img class="img-responsive img-border img-full" src="@mediaItem.GetPropertyValue("umbracoFile")" alt="@mediaItem.GetPropertyValue("Name")" />
                                    }
                                }
                </div>
                <div class="col-xs-9 text-center">
                    <p>@Umbraco.Field("articleContent")</p> 
						</div>
