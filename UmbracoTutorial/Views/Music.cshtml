@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "PageBase.cshtml";
}


        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                    @Umbraco.Field("albumDescription2")  @Umbraco.Field("title")
                    </h2>
                    <hr>
                </div>
                <div class="col-lg-12 text-center">
                    @{ 
						
                                    if (Model.Content.HasValue("musicheaderimage"))
                                    {
                                        var mediaItem = Umbraco.TypedMedia(Model.Content.GetPropertyValue("musicheaderimage"));
                                        <img class="img-responsive img-border img-full" src="@mediaItem.GetPropertyValue("umbracoFile")" alt="@mediaItem.GetPropertyValue("Name")" />
                                    }
                                }
                </div>
                <div class="col-xs-12 text-center">
                    <p>@Umbraco.Field("musiccontent")</p> 
					 <hr>
						</div>
			

            	<div class="row">
					               
					<div class="col-xs-6">
					 @{ 
						
                                    if (Model.Content.HasValue("albumCover1"))
                                    {
                                        var mediaItem = Umbraco.TypedMedia(Model.Content.GetPropertyValue("albumCover1"));
                                        <img class="img-responsive img-border img-full" src="@mediaItem.GetPropertyValue("umbracoFile")" alt="@mediaItem.GetPropertyValue("Name")" />
                                    }
                                }	
					</div>	
					<div class="col-xs-6">
					<p>	@Umbraco.Field("albumDescription1")</p> 
					</div>			
				</div>
				<div class="col-xs-12 text-center">
					
                    <p>@Umbraco.Field("album1Review")</p>
					 <hr>
					</div>		
			
				<div class="col-xs-12 text-center">
					@{ 
						
                                    if (Model.Content.HasValue("albumCover2"))
                                    {
                                        var mediaItem = Umbraco.TypedMedia(Model.Content.GetPropertyValue("albumCover2"));
                                        <img class="img-responsive img-border img-full" src="@mediaItem.GetPropertyValue("umbracoFile")" alt="@mediaItem.GetPropertyValue("Name")" />
                                    }
                     }	
                    <p>@Umbraco.Field("musicContent2")</p>
					</div>
				<div class="row">
					<div class="col-xs-6">
					
					</div>	
					<div class="col-xs-6">
					<p>	@Umbraco.Field("albumDescription2")</p> 
					</div>			
				</div>	
